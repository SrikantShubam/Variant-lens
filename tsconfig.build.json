{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "declaration": true,
        "resolveJsonModule": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "baseUrl": ".",
        "types": [
            "node"
        ]
    },
    "include": [
        "src/lib/clinvar-client.ts",
        "src/lib/variant.ts"
    ]
}